- const action = status.name == file.name ? `/library/stop` : `/library/${file.id}/play`
- const actionText = status.name == file.name ? "Stop" : "Play"
article.media-item(id=`media-item-${file.id}` class= file.tmdbId ? "found" : "not-found")
  img.media-thumbnail(
    src= file.poster || "/images/movie_not_found.png"
    hx-get= action
    hx-confirm=`Want to ${actionText.toLowerCase()} ${file.title}?`
    hx-target="#media-control"
    hx-select="#media-control"
    hx-swap="outerHTML"
  )
  article.media-info.tile-content
    header
      h3.media-title= file.title
      small.media-path
        i= file.path
    main
      .media-description= file.description || `No description found`
      //.media-search-term= file.searchTitle
      button.favorite-button(
        hx-get=`/library/${file.id}/favorite`
      )
        i.fa-regular.fa-heart
      button.edit-button(
        hx-get=`/library/${file.id}/edit`
        hx-target=`#media-item-${file.id}`
        hx-swap="outerHTML"
      )
        i.fa-regular.fa-pen-to-square
      button.info-button(
        hx-get=`/library/${file.id}/info`
        hx-target=`#media-item-${file.id}`
        hx-swap="outerHTML"
      )
        i.fa-solid.fa-info
      button.resync-button(
        hx-get=`/library/${file.id}/resync`
        hx-target=`#media-item-${file.id}`
        hx-swap="outerHTML"
      )
        i.fa-solid.fa-rotate
      button.preferred-button(
        hx-get=`/library/${file.id}/preferred`
      )
        i.fa-regular.fa-circle-check
    footer.media-controls
